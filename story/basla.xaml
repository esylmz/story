<Window x:Class="story.Basla"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş Ekranı" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        Background="Black">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF5A4A90"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7B67C9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF3B2B70"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <LinearGradientBrush x:Key="ShutterGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF8B0000" Offset="0.6"/>
            <GradientStop Color="#FF4B0000" Offset="1"/>
            <GradientStop Color="#FF2B0000" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Viewbox Stretch="Fill">
        <Grid Width="800" Height="450">

            <!-- Arka Plan -->
            <Image Source="Assets/background.jpeg" Stretch="Fill" Opacity="1" />

            <!-- GİRİŞ PANELİ -->
            <Border x:Name="LoginPanel"
                    Background="#FF2D2D2D"
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Panel.ZIndex="50">
                <StackPanel>
                    <TextBlock Text="Giriş Yap"
                               FontSize="22"
                               Foreground="White"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center" />

                    <TextBox x:Name="LoginUsernameTextBox"
                             Height="30"
                             Margin="0,0,0,10"
                             FontSize="14"
                             ToolTip="Kullanıcı Adı Girin" />

                    <PasswordBox x:Name="LoginPasswordBox"
                                 Height="30"
                                 Margin="0,0,0,20"
                                 FontSize="14"
                                 ToolTip="Şifre Girin" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="Giriş Yap"
                                Width="150"
                                Height="40"
                                Click="LoginButton_Click"
                                Margin="0,0,10,0" />

                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="İptal"
                                Width="80"
                                Height="35"
                                Background="#FF7777"
                                Foreground="White"
                                Click="CancelLogin_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- KAYIT PANELİ -->
            <Border x:Name="RegisterPanel"
                    Background="#FF2D2D2D"
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="20"
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Panel.ZIndex="50">
                <StackPanel>
                    <TextBlock Text="Kayıt Ol"
                               FontSize="22"
                               Foreground="White"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center" />

                    <TextBox x:Name="RegisterUsernameTextBox"
                             Height="30"
                             Margin="0,0,0,10"
                             FontSize="14"
                             ToolTip="Kullanıcı Adı Girin" />

                    <PasswordBox x:Name="RegisterPasswordBox"
                                 Height="30"
                                 Margin="0,0,0,20"
                                 FontSize="14"
                                 ToolTip="Şifre Girin" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="Kaydı Tamamla"
                                Width="150"
                                Height="40"
                                Click="RegisterButton_Click"
                                Margin="0,0,10,0" />

                        <Button Style="{StaticResource RoundedButtonStyle}"
                                Content="İptal"
                                Width="80"
                                Height="35"
                                Background="#FF7777"
                                Foreground="White"
                                Click="CancelRegister_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Başlık -->
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="361,44,0,0"
                FontSize="72"
                FontWeight="Bold"
                FontFamily="Arial Black"
                TextAlignment="Center"
                RenderTransformOrigin="0.5,0.5"
                Foreground="{StaticResource ShutterGradientBrush}"
                Panel.ZIndex="20">
                <TextBlock.RenderTransform>
                    <SkewTransform AngleX="-5" AngleY="0" />
                </TextBlock.RenderTransform>
                <TextBlock.Effect>
                    <DropShadowEffect Color="#AA330000" BlurRadius="10" ShadowDepth="6" Opacity="0.8" />
                </TextBlock.Effect>
                <Run Text="SHUTTER "/>
                <LineBreak/>
                <Run Text="ISLAND"/>
            </TextBlock>

            <!-- Kayıt Ol Butonu -->
            <Button x:Name="ShowRegisterButton"
        Width="201" Height="32"
        FontSize="16"
        FontWeight="SemiBold"
        Foreground="White"
        Cursor="Hand"
        Click="ShowRegisterButton_Click"
        Margin="568,280,0,0"
        Background="Transparent"
        BorderThickness="0"
        Visibility="Visible"
        Panel.ZIndex="30"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" SnapsToDevicePixels="True">
                            <Grid>
                                <Rectangle x:Name="bgRect" RadiusX="8" RadiusY="8">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF5A4A90" Offset="0"/>
                                            <GradientStop Color="#FF372B6B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bgRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF7B67C9" Offset="0"/>
                                            <GradientStop Color="#FF58489D" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#66000000" BlurRadius="10" ShadowDepth="3" Opacity="0.7" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bgRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF3B2B70" Offset="0"/>
                                            <GradientStop Color="#FF2A2050" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#44000000" BlurRadius="6" ShadowDepth="2" Opacity="0.5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                Kayıt Ol
            </Button>



            <Button x:Name="ShowLoginButton"
        Width="201" Height="32"
        FontSize="16"
        FontWeight="SemiBold"
        Foreground="White"
        Cursor="Hand"
        Click="ShowLoginButton_Click"
        Margin="568,316,0,0"
        Background="Transparent"
        BorderThickness="0"
        Visibility="Visible"
        Panel.ZIndex="30"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" SnapsToDevicePixels="True">
                            <Grid>
                                <Rectangle x:Name="bgRect" RadiusX="8" RadiusY="8">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF5A4A90" Offset="0"/>
                                            <GradientStop Color="#FF372B6B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bgRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF7B67C9" Offset="0"/>
                                            <GradientStop Color="#FF58489D" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#66000000" BlurRadius="10" ShadowDepth="3" Opacity="0.7" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bgRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF3B2B70" Offset="0"/>
                                            <GradientStop Color="#FF2A2050" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#44000000" BlurRadius="6" ShadowDepth="2" Opacity="0.5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                Giriş Yap
            </Button>




            <!-- Oyuna Başla Butonu -->
            <Button x:Name="StartButton"
                    
                    Width="201" Height="32"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Cursor="Hand"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Padding="10"
                    BorderThickness="0"
                    Click="StartButton_Click"
                    Margin="568,353,0,0"
                    Background="Transparent"
                    
                    
                    Panel.ZIndex="30">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" SnapsToDevicePixels="True">
                            <Grid>
                                <Rectangle x:Name="bgRect" RadiusX="8" RadiusY="8">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF5A4A90" Offset="0"/>
                                            <GradientStop Color="#FF372B6B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bgRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF7B67C9" Offset="0"/>
                                            <GradientStop Color="#FF58489D" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#66000000" BlurRadius="10" ShadowDepth="3" Opacity="0.7" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bgRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF3B2B70" Offset="0"/>
                                            <GradientStop Color="#FF2A2050" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#44000000" BlurRadius="6" ShadowDepth="2" Opacity="0.5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                Oyuna Başla
            </Button>

            <!-- Kaldığın Yerden Devam Et -->

            <!-- Ayarlar Butonu -->
            <Button x:Name="SettingsButton"
                    Width="201" Height="32"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Cursor="Hand"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Padding="10"
                    BorderThickness="0"
                    Click="SettingsButton_Click"
                    Margin="568,390,0,0"
                    Background="Transparent"
                    Panel.ZIndex="30"
                    
                    Content="Ayarlar">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" SnapsToDevicePixels="True">
                            <Grid>
                                <Rectangle x:Name="bgRect" RadiusX="8" RadiusY="8">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF5A4A90" Offset="0"/>
                                            <GradientStop Color="#FF372B6B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bgRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF7B67C9" Offset="0"/>
                                            <GradientStop Color="#FF58489D" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#66000000" BlurRadius="10" ShadowDepth="3" Opacity="0.7" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bgRect" Property="Fill">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF3B2B70" Offset="0"/>
                                            <GradientStop Color="#FF2A2050" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#44000000" BlurRadius="6" ShadowDepth="2" Opacity="0.5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Ayarlar Paneli -->
            <Border x:Name="SettingsPanel" Visibility="Collapsed"
                    Background="#FF000000"
                    Width="300" Height="100"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Padding="10" CornerRadius="10" Panel.ZIndex="50">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <CheckBox x:Name="MusicToggleCheckBox" Content="Müziği Aç"
                              FontSize="20" Foreground="White"
                              Checked="MusicToggleCheckBox_Checked"
                              Unchecked="MusicToggleCheckBox_Unchecked"/>

                    <Button Style="{StaticResource RoundedButtonStyle}"
                            Content="Kapat" Width="80" Margin="0,10,0,0" Click="CloseSettings_Click" />
                </StackPanel>
            </Border>

        </Grid>
    </Viewbox>
</Window>
