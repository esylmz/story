<Window x:Class="story.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hikaye"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          Color="Black"
                          Direction="320"
                          ShadowDepth="3"
                          Opacity="0.7"
                          BlurRadius="6" />

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF1C3E75"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderThickness="0"
                                Padding="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect" Value="{StaticResource DropShadowEffect}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2B5CAD"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="White"
                                              Direction="0"
                                              ShadowDepth="0"
                                              Opacity="1"
                                              BlurRadius="15"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Panel.ZIndex" Value="10"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ExitButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#FF8B0000"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFA52A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Arka plan resmi -->
        <Image x:Name="imgBackground"
               Stretch="UniformToFill"
               Panel.ZIndex="0"
               Grid.ColumnSpan="2" />

        <!-- Yarı saydam siyah katman -->
        <Rectangle Fill="#66000000"
                   Panel.ZIndex="1"
                   Grid.ColumnSpan="2"
                   Margin="0" />

        <!-- Yazı alanı -->
        <TextBlock x:Name="txtSceneText"
                   Opacity="1"
                   FontSize="17"
                   FontWeight="Normal"
                   FontStyle="Normal"
                   TextWrapping="Wrap"
                   TextTrimming="CharacterEllipsis"
                   Margin="10,95,50,65"
                   Foreground="White"
                   FontFamily="Consolas"
                   TextAlignment="Justify"
                   LineStackingStrategy="BlockLineHeight"
                   LineHeight="26"
                   Panel.ZIndex="2"
                   Effect="{StaticResource DropShadowEffect}"
                   Grid.ColumnSpan="2" />

        <!-- Seçenek Butonları Grid -->
        <Grid Panel.ZIndex="2"
              Grid.ColumnSpan="2"
              Margin="0,0,0,10"
              VerticalAlignment="Bottom"
              Height="55">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnChoice1"
                    FontSize="18"
                    FontWeight="Bold"
                    Click="btnChoice1_Click"
                    Margin="0,0,10,0"
                    Style="{StaticResource RoundedButtonStyle}"
                    Grid.Column="0" Content=".  .  ." />

            <Button x:Name="btnChoice2"
                    FontSize="18"
                    FontWeight="Bold"
                    Click="btnChoice2_Click"
                    Margin="10,0,0,0"
                    Style="{StaticResource RoundedButtonStyle}"
                    Grid.Column="1" Content=".  .  ." />
        </Grid>

        <!-- Üst sol köşe kontrol butonları -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10,10,0,0"
                    Panel.ZIndex="3">
            <Button x:Name="btnRestart"
                    Content="⟳ Yeniden Başla"
                    Width="120"
                    Height="30"
                    Margin="0,0,10,0"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="btnRestart_Click"
                    ToolTip="Oyunu baştan başlat" />
            <Button x:Name="btnHome"
        Content="⌂ Ana Ekran"
        Width="100"
        Height="30"
        Margin="0,0,10,0"
        Style="{StaticResource RoundedButtonStyle}"
        Click="btnHome_Click"
        ToolTip="Ana ekrana dön" />


            <Button x:Name="btnExit"
                    Content="✖ Çıkış"
                    Width="70"
                    Height="30"
                    Style="{StaticResource ExitButtonStyle}"
                    Click="btnExit_Click"
                    ToolTip="Uygulamayı kapat" />
        </StackPanel>
    </Grid>
</Window>
